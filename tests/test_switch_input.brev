print("=== Scelta Frutto ===")
print("Scrivi: 1=mela, 2=banana, 3=arancia")

let scelta = input("La tua scelta: ")

let frutto = switch(scelta, {
    "1": "mela",
    "2": "banana",
    "3": "arancia",
    "mela": "sei uno scrittore di prosa",
    "banana": "ti piacciono i gialli",
    "arancia": "ami i romanzi"
}, "scelta sconosciuta")

print("Hai scelto:", frutto)

